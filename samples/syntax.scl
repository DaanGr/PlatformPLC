CASE #iState OF
    10: // IDLE
        IF #cmdStart THEN
            #iState := 20; // STARTING
        END_IF;

    20: // STARTING
        
        IF #startingDone THEN
            #iState := 30; // RUNNING
        END_IF;

    30: // RUNNING
        
        IF #cmdHold THEN
            #iState := 40; // HOLDING
        ELSIF #runningDone THEN
            #iState := 70; // COMPLETING
        END_IF;

    40: // HOLDING
        IF #holdingDone THEN
            #iState := 50; // HELD
        END_IF;

    50: // HELD
        IF #cmdRestart THEN
            #iState := 60; // RESTARTING
        END_IF;

    60: // RESTARTING
        IF #restartingDone THEN
            #iState := 30; // RUNNING
        END_IF;

    70: // COMPLETING
        IF #completingDone THEN
            #iState := 80; // COMPLETED
        END_IF;

    80: // COMPLETED
        IF #cmdReset THEN
            #iState := 10; // IDLE
        END_IF;

    90: // ABORTING
        #iState := 100; // ABORTED

    100: // ABORTED
        IF #cmdReset THEN
            #iState := 10; // IDLE
        END_IF;
END_CASE;