{
  "name": "platformplc",
  "version": "0.1.0",
  "description": "PlatformPLC is a universal, open-source framework designed to bring PLC engineering into the modern software development era. It allows engineers to design hardware-agnostic logic within **VS Code**, leveraging professional software engineering tools such as Git and Language Servers.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test:core": "dotnet test src/PlatformPLC.slnx",
    "build:server": "dotnet build src/PlatformPLC.slnx",
    "ext:install": "npm install --prefix src/Extension/platform-plc",
    "ext:watch": "npm run watch --prefix src/Extension/platform-plc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaanGr/PlatformPLC.git"
  },
  "keywords": [],
  "author": "DaanGr",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/DaanGr/PlatformPLC/issues"
  },
  "homepage": "https://github.com/DaanGr/PlatformPLC#readme",
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1"
  },
  "lint-staged": {
    "*.cs": "dotnet format src/PlatformPLC.slnx --include",
    "*.{ts,tsx,json,md}": "npx prettier --write"
  }
}
